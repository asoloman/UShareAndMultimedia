<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.dbyc.ushareandmultimedia.MainActivity">

    <Button
        android:id="@+id/btn_wblogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微博登录" />

    <Button
        android:id="@+id/btn_wxlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_wblogin"
        android:text="微信登录" />

    <Button
        android:id="@+id/btn_qqlogin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_wxlogin"
        android:text="QQ登录" />

    <Button
        android:id="@+id/btn_share"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn_qqlogin"
        android:text="分享" />


    <Button
        android:id="@+id/btn_statistic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_share"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_wblogin"
        android:text="事件统计" />

    <Button
        android:id="@+id/btn_meida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_wblogin"
        android:layout_marginTop="10dp"
        android:text="模拟发布" />

    <RelativeLayout
        android:id="@+id/rl_videoAndAudio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/btn_meida"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_video_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_paly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/play" />

    </RelativeLayout>


</RelativeLayout>
